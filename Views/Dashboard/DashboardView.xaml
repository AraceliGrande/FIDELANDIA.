<UserControl x:Class="FIDELANDIA.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f0f2f5">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Cards -->
        </Grid.RowDefinitions>

        <!-- Texto de bienvenida -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="10,10,0,20">
            <TextBlock Text="Pantalla pendiente" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#333333" TextAlignment="Left"/>
            <TextBlock Text="Se genera cuando ya está cargada la base de datos" 
                   FontSize="16" Foreground="#666666" 
                   Margin="0,8,0,0" TextAlignment="Left"/>
        </StackPanel>

        <!-- Cards -->
        <UniformGrid Grid.Row="1" Columns="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <!-- Card 1 -->
            <Border CornerRadius="12" Background="White" Margin="15" Padding="20"
                BorderBrush="#ddd" BorderThickness="1"
                Effect="{StaticResource DropShadow}">
                <StackPanel>
                    <TextBlock Text="Card 1" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Contenido de la tarjeta 1" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Card 2 -->
            <Border CornerRadius="12" Background="White" Margin="15" Padding="20"
                BorderBrush="#ddd" BorderThickness="1"
                Effect="{StaticResource DropShadow}">
                <StackPanel>
                    <TextBlock Text="Card 2" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Contenido de la tarjeta 2" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Card 3 -->
            <Border CornerRadius="12" Background="White" Margin="15" Padding="20"
                BorderBrush="#ddd" BorderThickness="1"
                Effect="{StaticResource DropShadow}">
                <StackPanel>
                    <TextBlock Text="Card 3" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Contenido de la tarjeta 3" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Agregá más cards según necesites -->
        </UniformGrid>
    </Grid>
</UserControl>
