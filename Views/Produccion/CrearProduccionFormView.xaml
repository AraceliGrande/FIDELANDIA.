<UserControl x:Class="FIDELANDIA.Views.Produccion.CrearProduccionFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="600"
             Background="Transparent">

    <Border Background="White" Padding="32" Effect="{StaticResource DropShadow}">
        <StackPanel>
            <!-- Título -->
            <TextBlock Text="Crear Nuevo Lote de Producción"
                       FontSize="19"
                       FontWeight="Bold"
                       Foreground="#e5740a"
                       Margin="0,0,0,10"/>

            <!-- Subtítulo -->
            <TextBlock Text="Complete los datos a continuación para generar un nuevo lote de producción."
                       FontSize="11"
                       FontWeight="SemiBold"
                       Foreground="DarkOliveGreen"
                       TextWrapping="Wrap"
                       Margin="0,0,0,40"/>

            <!-- Tipo de pasta -->
            <StackPanel Style="{StaticResource FormFieldContainer}">
                <TextBlock Text="Tipo de Pasta" Style="{StaticResource FormLabel}"/>
                <ComboBox x:Name="CmbTipoPasta" Style="{StaticResource UnderlineComboBox}">
                    <ComboBoxItem Content="Fettuccine"/>
                    <ComboBoxItem Content="Spaghetti"/>
                    <ComboBoxItem Content="Ravioli"/>
                </ComboBox>
            </StackPanel>

            <!-- Fecha de producción -->
            <StackPanel Style="{StaticResource FormFieldContainer}">
                <TextBlock Text="Fecha de Producción" Style="{StaticResource FormLabel}"/>
                <DatePicker x:Name="DpFechaProduccion" Style="{StaticResource UnderlineDatePicker}"/>
            </StackPanel>

            <!-- Cantidad a producir -->
            <StackPanel Style="{StaticResource FormFieldContainer}">
                <TextBlock Text="Cantidad a Producir (kg)" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="TxtCantidad" Style="{StaticResource UnderlineTextBox}"/>
            </StackPanel>

            <!-- Fecha de vencimiento -->
            <StackPanel Style="{StaticResource FormFieldContainer}" Margin="0,0,0,30">
                <TextBlock Text="Fecha de Vencimiento" Style="{StaticResource FormLabel}"/>
                <DatePicker x:Name="DpFechaVencimiento" Style="{StaticResource UnderlineDatePicker}"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" Style="{StaticResource SecondaryButton}" Width="120" Height="35" Margin="0,0,12,0" Click="Cancelar_Click"/>
                <Button Content="Guardar" Style="{StaticResource PrimaryButton}" Width="120" Height="35" Click="Guardar_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
