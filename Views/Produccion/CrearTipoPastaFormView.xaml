<UserControl x:Class="FIDELANDIA.Views.Produccion.CrearTipoPastaFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="#F5F5F5">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO PRINCIPAL -->
        <StackPanel Grid.Row="0" Margin="5,0,0,24">
            <TextBlock Text="Gestión de Tipos de Pasta"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#E5740A"
                       Margin="0,0,0,6"/>
            <TextBlock Text="Cree nuevos tipos de pasta y actualice el costo de tipos existentes."
                       FontSize="11"
                       Foreground="#555"/>
        </StackPanel>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- TABLA DERECHA -->
            <Border Grid.Column="0"
                    Background="White"
                    Padding="24"
                    Margin="0,0,15,0"
                    CornerRadius="16"
                    BorderBrush="#EEE"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- TABLA -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Tipos de Pasta Existentes"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   Foreground="#E5740A"
                                   Margin="0,0,0,20"/>

                        <DataGrid x:Name="TablaTiposPasta"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#FFF8F3"
                                  RowBackground="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="None"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  FontSize="11"
                                  RowHeight="36"
                                  MaxHeight="350"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  IsReadOnly="False">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Height" Value="22"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="BorderBrush" Value="#EEE"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFF8F0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding IdTipoPasta}" Width="60" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="2*" IsReadOnly="True">

                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Contenido (kg)" Binding="{Binding ContenidoEnvase}" IsReadOnly="True" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Costo Actual" Binding="{Binding CostoActual}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- BOTÓN ABAJO -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Actualizar Cambios"
                                Style="{StaticResource PrimaryButton}"
                                Width="180" Height="36"
                                Click="Actualizar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- FORMULARIO IZQUIERDO -->
            <Border Grid.Column="1"
         Background="White"
         Padding="26"
         CornerRadius="16"
         BorderBrush="#EEE"
         BorderThickness="1"
         Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- CONTENIDO -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Nuevo Tipo de Pasta"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="#E5740A"
                        Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Nombre" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="TxtNombre" Style="{StaticResource UnderlineTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Contenido por envase (kg)" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="TxtContenido" Style="{StaticResource UnderlineTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Descripción" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="TxtDescripcion" Style="{StaticResource UnderlineTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,28">
                            <TextBlock Text="Costo Actual" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="TxtCosto" Style="{StaticResource UnderlineTextBox}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- BOTONES -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Cancelar"
                     Style="{StaticResource SecondaryButton}"
                     Width="110" Height="36"
                     Margin="0,0,8,0"
                     Click="Cancelar_Click"/>
                        <Button Content="Guardar"
                     Style="{StaticResource PrimaryButton}"
                     Width="120" Height="36"
                     Click="Guardar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
