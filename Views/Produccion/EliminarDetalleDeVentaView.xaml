<UserControl x:Class="FIDELANDIA.Views.Produccion.EliminarDetalleDeVentaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="*"/>
            <!-- Detalle + advertencia -->
            <RowDefinition Height="Auto"/>
            <!-- Botones inferiores -->
        </Grid.RowDefinitions>

        <!-- Encabezado superior -->
        <Border Grid.Row="0" Background="White" Padding="24" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <TextBlock Text="🧾 Eliminar detalle de venta" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#E5740A"/>
        </Border>

        <!-- Contenedor central: detalle + advertencia -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32,24" HorizontalAlignment="Stretch">
                <!-- Detalle del lote -->
                <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="6" Padding="30" Background="White" Margin="0,10,0,30">
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="ID Venta:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Foreground="#444"/>
                        <TextBlock Text="{Binding IdVenta}" Grid.Row="0" Grid.Column="1"/>

                        <TextBlock Text="Tipo de Pasta:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Foreground="#444"/>
                        <TextBlock Text="{Binding Lote.TipoPasta.Nombre}" Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="Cantidad Vendida:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Foreground="#444"/>
                        <TextBlock Text="{Binding Cantidad}" Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Fecha:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Foreground="#444"/>
                        <TextBlock Text="{Binding Venta.Fecha, StringFormat={}{0:dd/MM/yyyy}}" Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                </Border>

                <!-- Mensaje de advertencia -->
                <Border Background="#FFF3CD" BorderBrush="#FFEBA1" BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="⚠️ Advertencia" FontWeight="Bold" Foreground="#856404" FontSize="14" Margin="0,0,0,8"/>

                        <TextBlock TextWrapping="Wrap" Foreground="#856404" FontSize="12" Margin="15,0,0,8">
                                Esta acción eliminará únicamente el detalle de venta seleccionado.
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" Foreground="#856404" FontSize="12" Margin="15,0,0,8">
                                Si la venta incluye varios productos, los demás permanecerán registrados en el sistema. Podés eliminar cada producto individualmente desde la tabla "Ventas Registradas" buscando el ID correspondiente.
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" Foreground="#856404" FontSize="12" Margin="15,0,0,8">
                                Si la venta contenía un solo producto, se eliminará toda la venta. En ambos casos, el registro se actualizará y la cantidad del producto eliminado se sumará nuevamente al stock disponible.
                        </TextBlock>
                    </StackPanel>
                </Border>


            </StackPanel>
        </ScrollViewer>

        <!-- Botones inferiores -->
        <Border Grid.Row="2" Background="White" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancelar" 
                        Content="Cancelar" 
                        Width="150" Height="36"
                        Background="DimGray" Foreground="White" FontSize="12"
                        BorderBrush="#DDD" FontWeight="SemiBold" Cursor="Hand"
                        Margin="0,0,8,0"
                        Click="BtnCancelar_Click"/>

                <Button x:Name="BtnEliminar" 
                        Content="🗑️ Eliminar venta" 
                        Width="150" Height="36"
                        Background="#E74C3C" Foreground="White" FontWeight="Bold" FontSize="12"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnEliminar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E74C3C"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
