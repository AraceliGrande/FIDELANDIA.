<UserControl x:Class="FIDELANDIA.Views.Produccion.ProduccionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FIDELANDIA.Helpers"
             >

    <UserControl.Resources>
        <local:ExpresionPaqueteConverter x:Key="PaqueteConverter"/>
    </UserControl.Resources>

    <Grid Margin="15,8,15,8" >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Contenido -->
            </Grid.RowDefinitions>


            <!-- CONTENIDO PRINCIPAL -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- IZQUIERDA: CARD DE PRODUCCIONES DISPONIBLES -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" BorderBrush="#EEE" BorderThickness="1" Padding="20" Margin="0,0,9,0"  Effect="{StaticResource DropShadow}">
                    <Grid>
                        <!-- Definimos dos filas: la de contenido scrollable y la de botones -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <!-- Contenido scrollable -->
                            <RowDefinition Height="Auto"/>
                            <!-- Botones al fondo -->
                        </Grid.RowDefinitions>

                        <!-- Contenido scrollable -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Producciones disponibles"
                               FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#b65601" />

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Secciones}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Click="TipoPasta_Click"
                                                    Cursor="Hand"
                                                    Background="White"
                                                    Padding="10"
                                                    BorderThickness="1"
                                                    Effect="{x:Null}"
                                                    Margin="5"> 
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                            Background="White"
                                                            CornerRadius="12"
                                                            BorderBrush="LightGray"
                                                            BorderThickness="0.8"
                                                            Padding="{TemplateBinding Padding}">    
                                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="🍜" FontSize="28" Foreground="#f5be7f" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="{Binding Nombre}" FontWeight="SemiBold" FontSize="15" Foreground="#000" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="{Binding ContenidoEnvase, StringFormat={}Contenido: {0} Kg}" FontWeight="Light" FontSize="11" Foreground="gray" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="{Binding CantidadDisponible, Converter={StaticResource PaqueteConverter}}" FontWeight="SemiBold" FontSize="14" Foreground="#b65601" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="BorderBrush" Value="#f5be7f"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>

                        <!-- Botones al fondo -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
                            <Button Content="➕ Nuevo lote" Style="{StaticResource SecondaryButton}" Height="30" Width="170" Margin="10,0" Click="NuevoLote_Click"/>
                            <Button Content="💰 Nueva venta" Style="{StaticResource SecondaryButton}" Height="30" Width="170" Margin="10,0" Click="NuevaVenta_Click"/>
                        </StackPanel>

                    </Grid>
                </Border>


                <!-- DERECHA: CARD DE RESUMEN Y DETALLE -->
                <Border Grid.Column="1" Background="White" CornerRadius="12" BorderBrush="#EEE" BorderThickness="1" Padding="20" Margin="2,0,0,0"  Effect="{StaticResource DropShadow}">
                    <Grid>
                        <!-- Definimos dos filas: contenido y botones -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <!-- Contenido scrollable -->
                            <RowDefinition Height="Auto"/>
                            <!-- Botones al fondo -->
                        </Grid.RowDefinitions>

                        <!-- Contenido scrollable -->
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Título -->
                                <TextBlock Text="Resumen y detalle" FontSize="14" FontWeight="Bold" Foreground="#cb773c" Margin="0,0,0,20"/>

                                <!-- Tarjetas de resumen -->
                                <UniformGrid Columns="2" Margin="0,0,0,10">
                                    <Border Background="#FFF" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Padding="10" Margin="4">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="Tipos de pasta" FontSize="13" Foreground="#666" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding TotalTipos}" FontSize="18" FontWeight="Bold" Foreground="#2E3C2F" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                            <TextBlock Text="(Tipos de pasta)" FontSize="8" Foreground="#666" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#FFF" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Padding="10" Margin="4">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="Producción del día" FontSize="13" Foreground="#666" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding ProduccionTotal}" FontSize="18" FontWeight="Bold" Foreground="#2E3C2F" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                            <TextBlock Text="(Unidades)" FontSize="8" Foreground="#666" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#FFF" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Padding="10" Margin="4">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="Ventas del día" FontSize="13" Foreground="#666" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding VentasDia}" FontSize="18" FontWeight="Bold" Foreground="#2E3C2F" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                            <TextBlock Text="(Unidades)" FontSize="8" Foreground="#666" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#FFF" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Padding="10" Margin="4">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="Stock total" FontSize="13" Foreground="#666" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding StockTotal}" FontSize="18" FontWeight="Bold" Foreground="#2E3C2F" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                            <TextBlock Text="(Unidades)" FontSize="8" Foreground="#666" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>

                                <!-- Tabla detalle compacta -->
                                <Border x:Name="TablaDetalle" Padding="14" BorderBrush="#eee" BorderThickness="1" CornerRadius="10" Background="White" Height="320">
                                    <StackPanel>
                                        <!-- Encabezado tabla -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                            <TextBlock Text="{Binding NombreTipoPasta, FallbackValue='Seleccioná un tipo de pasta'}" FontWeight="Bold" FontSize="14" Foreground="#B65601"/>
                                            <TextBlock Text="   Detalle de productos disponibles" FontSize="11" Foreground="#555" Margin="10,3,0,0"/>
                                        </StackPanel>

                                        <!-- DataGrid scrollable -->
                                        <DataGrid ItemsSource="{Binding Lotes}"
                                                  AutoGenerateColumns="False"
                                                  HeadersVisibility="Column"
                                                  CanUserAddRows="False"
                                                  CanUserDeleteRows="False"
                                                  CanUserResizeRows="False"
                                                  CanUserSortColumns="False"
                                                  IsReadOnly="True"
                                                  SelectionMode="Single"
                                                  SelectionUnit="FullRow"
                                                  GridLinesVisibility="Horizontal"
                                                  HorizontalGridLinesBrush="#EEE" 
                                                  RowBackground="Transparent"
                                                  AlternatingRowBackground="Transparent"
                                                  BorderThickness="0"
                                                  Background="Transparent"
                                                  VerticalScrollBarVisibility="Auto"
                                                  Height="250">     

                                            <!-- Quitar interacción y selección -->
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Margin" Value="0,10,0,10"/>
                                                    <Setter Property="Foreground" Value="#3B3A3A"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                                </Style>
                                            </DataGrid.RowStyle>

                                            <!-- Encabezado más oscuro y sin fondo -->
                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Foreground" Value="#242323"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Margin" Value="0,10,0,10"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <!-- Columnas -->
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Nº Lote" Binding="{Binding IdLote}" Width="*"/>
                                                <DataGridTextColumn Header="Producción" Binding="{Binding FechaProduccion, StringFormat=dd/MM/yyyy}" Width="*"/>
                                                <DataGridTextColumn Header="Vencimiento" Binding="{Binding FechaVencimiento, StringFormat=dd/MM/yyyy}" Width="*"/>
                                                <DataGridTextColumn Header="Cantidad" Binding="{Binding CantidadDisponible}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Botones pegados al fondo -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
                            <Button Content="📃 Generar balance" Style="{StaticResource SecondaryButton}" Height="30" Width="170" Margin="5,0" Click="GenerarBalanceDiario_Click"/>
                            <Button Content="🍝 Tipo de pasta" Style="{StaticResource SecondaryButton}" Height="30" Width="170" Margin="5,0" Click="BtnNuevoTipoPasta_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
