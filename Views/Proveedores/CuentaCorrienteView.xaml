<UserControl x:Class="FIDELANDIA.Views.CuentaCorrienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Border Background="White" CornerRadius="12" Padding="20"
            BorderBrush="#eee" BorderThickness="1" Effect="{StaticResource DropShadow}">

        <DockPanel LastChildFill="True">

            <!-- Botones abajo -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="➕ Nuevo Movimiento" Style="{StaticResource PrimaryButton}" 
                        Margin="0,0,12,0" x:Name="BtnNuevoMovimiento" Width="165" Height="32"
                        Click="BtnNuevaTransaccion_Click"/>
                <Button Content="⬇ Exportar CSV" Style="{StaticResource SecondaryButton}" Height="32" Width="163"/>
            </StackPanel>

            <StackPanel>

                <!-- ENCABEZADO - Datos del proveedor -->
                <Border Background="#fdfdfd" CornerRadius="8" Padding="16" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- INFO DEL PROVEEDOR -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <!-- Línea con "Cuenta Corriente" + nombre del proveedor -->
                            <DockPanel LastChildFill="True" Margin="0,0,0,16">
                                <TextBlock Text="Cuenta Corriente: " FontSize="14" Foreground="#a34c00" FontWeight="SemiBold"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="DetalleNombre" Text="Nombre del proveedor" FontSize="14" Foreground="#a34c00" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                            </DockPanel>

                            <!-- Datos organizados -->
                            <UniformGrid Columns="2" Rows="2" Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,10">
                                    <TextBlock Text="📋 CUIT:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="DetalleCuit" Text="00-00000000-0" Foreground="#555" Width="Auto"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="📞 Teléfono:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="DetalleTelefono" Text="(000) 0000-0000" Foreground="#555" Width="Auto"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="📧 Email:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="DetalleEmail" Text="emailProveedor@mail.com" Foreground="#555" Width="Auto"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠 Dirección:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="DetalleDireccion" Text="Direccion proveedor" Foreground="#555" Width="Auto"/>
                                </StackPanel>
                            </UniformGrid>
                        </StackPanel>

                        <!-- SALDO -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="Saldo Actual" FontSize="14" Foreground="#777" TextAlignment="Right"/>
                            <TextBlock x:Name="DetalleSaldo" Text="$ 0,00" FontSize="28" FontWeight="Bold" Foreground="#2e7d32" TextAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Border>


                <!-- TABLA DE MOVIMIENTOS -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <DataGrid x:Name="MovimientosGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal" RowHeight="28">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="80"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="80"/>
                            <DataGridTextColumn Header="Concepto" Binding="{Binding Concepto}" Width="*"/>
                            <DataGridTextColumn Header="Debe" Binding="{Binding Debe}" Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                            <DataGridTextColumn Header="Haber" Binding="{Binding Haber}" Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                            <DataGridTextColumn Header="Saldo" Binding="{Binding Saldo}" Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                            <DataGridTextColumn Header="Factura" Binding="{Binding Factura}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
