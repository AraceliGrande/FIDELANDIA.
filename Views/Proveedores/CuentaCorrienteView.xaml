<UserControl x:Class="FIDELANDIA.Views.CuentaCorrienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 🔍 PANEL DE FILTROS FLOTANTE -->
        <Border x:Name="PanelFiltros" Grid.Row="0" CornerRadius="10" BorderBrush="#FFE6E6" Background="White" BorderThickness="1" Margin="0,0,15,10" VerticalAlignment="Top" Visibility="Collapsed" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#999" BlurRadius="10" Opacity="0.25" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 🪟 Encabezado -->
                <Grid Grid.Row="0" Margin="0,0,0,8" Cursor="">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="📅 Filtros de búsqueda" FontWeight="Bold" Foreground="#BD5704" FontSize="13" VerticalAlignment="Center" Margin="5,0,0,0"/>

                    <Button Grid.Column="1" Content="❌" Width="25" Height="25" FontSize="10" ToolTip="Cerrar filtros" Style="{StaticResource TertiaryButton}" Click="BtnCerrarFiltro_Click" Margin="5,0,10,0" BorderBrush="White"/>
                </Grid>

                <!-- 📅 Contenido principal -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filtros a la izquierda -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="Desde:" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="#444" FontWeight="SemiBold"/>
                        <DatePicker x:Name="FechaDesdePicker" Style="{StaticResource UnderlineDatePicker}" Width="155" Height="30" Margin="0,0,60,0"/>
                        <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#444" FontWeight="SemiBold"/>
                        <DatePicker x:Name="FechaHastaPicker" Style="{StaticResource UnderlineDatePicker}" Width="155" Height="30" Margin="0,0,65,0"/>
                    </StackPanel>

                    <!-- Botones a la derecha -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="BtnLimpiar" Content="Limpiar filtro" Width="130" Height="32" Style="{StaticResource SecondaryButton}" Click="BtnQuitarFiltro_Click" Margin="0,0,10,0"/>
                        <Button x:Name="BtnBuscar" Content="Buscar" Width="130" Height="32" Style="{StaticResource PrimaryButton}" Click="BtnBuscarPorFecha_Click" Margin="0,0,10,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <!-- 🔍 INFORMACION PROVEEDOR-->
        <Border Grid.Row="1" Background="White" Margin="0,0,15,0" CornerRadius="12" Padding="15" BorderBrush="#eee" BorderThickness="1" Effect="{StaticResource DropShadow}">
            <DockPanel LastChildFill="True">

                <!-- Botones abajo -->
                <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Margin="0,5,0,0" >
                    <!-- Fila 1: paginación -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,2">
                        <!-- ComboBox para seleccionar cantidad de registros por página -->
                        <ComboBox x:Name="CbTamanoPagina" Width="60" SelectionChanged="CbTamanoPagina_SelectionChanged" Height="20" Background="#FFF" Margin="10,0,20,0">
                            <ComboBoxItem>5</ComboBoxItem>
                            <ComboBoxItem>15</ComboBoxItem>
                            <ComboBoxItem>25</ComboBoxItem>
                            <ComboBoxItem>50</ComboBoxItem>
                            <ComboBoxItem>100</ComboBoxItem>
                            <ComboBoxItem>Todos</ComboBoxItem>
                        </ComboBox>

                        <Border Padding="8" Background="Transparent">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="⬅" Width="28" Height="28" Margin="0,0,8,0"  Click="BtnPaginaAnterior_Click"  x:Name="BtnAnterior"  Background="#FFF" Foreground="#555"  FontWeight="SemiBold"/>

                                <TextBlock x:Name="TxtPaginaActual" Text="Página 1 / 1"  VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12"  Margin="20,5,35,5" Foreground="#555"/>

                                <Button Content="⮕" Width="28" Height="28" Click="BtnPaginaSiguiente_Click"  x:Name="BtnSiguiente"  Background="#FFF"  Foreground="#555" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <Button x:Name="BtnMostrarFiltros" Content="Filtros" Width="90" Height="26" Background="#FFF" Foreground="#444" BorderBrush="Transparent" BorderThickness="1" 
                                FontWeight="SemiBold" Margin="10,0,0,0" Cursor="Hand" FontSize="12" Click="BtnMostrarFiltros_Click" />

                    </StackPanel>

                    <!-- Fila 2: botones de acción -->

                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="BtnNuevoMovimiento" Content="➕ Nuevo Movimiento" Margin="0,0,10,0" Width="165" Height="32" Style="{StaticResource PrimaryButton}" Click="BtnNuevaTransaccion_Click" />
                        <Button x:Name="BtnExportarExcel" Content="⬇ Exportar Excel" Width="163" Height="32" Style="{StaticResource SecondaryButton}" Click="BtnExportarExcel_Click" />
                    </StackPanel>
                </StackPanel>


                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Fila del encabezado: auto-ajustable según contenido -->
                        <RowDefinition Height="Auto"/>
                        <!-- Fila de la tabla: ocupa todo el espacio restante -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ENCABEZADO - Datos del proveedor -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="1,4,0,0">
                            <TextBlock Text="Cuenta Corriente: " FontSize="14" Foreground="#C4620C" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock x:Name="DetalleNombre" Text="Nombre del proveedor" FontSize="14" FontWeight="Bold" Foreground="#a34c00" TextTrimming="CharacterEllipsis" ToolTipService.ShowDuration="20000"/>
                        </StackPanel>

                        <!-- Saldos -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0">
                            <TextBlock Text="Saldo actual:" FontSize="11" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,2" TextAlignment="Right"/>
                            <TextBlock x:Name="DetalleSaldo" FontSize="25" FontWeight="Bold" Foreground="#a34c00" TextAlignment="Right"/>
                        </StackPanel>
                    </Grid>

                    <!-- TABLA DE MOVIMIENTOS -->
                    <DataGrid Grid.Row="1" x:Name="MovimientosGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="25"
                          IsReadOnly="True"
                          Margin="0"
                          Background="White"
                          AlternatingRowBackground="#FFF8F8F8"
                          HorizontalGridLinesBrush="#EEE"
                          GridLinesVisibility="Horizontal"
                          VerticalGridLinesBrush="#EEE"
                          RowHeaderWidth="0"
                          BorderThickness="0"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" 
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="80"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="80"/>
                            <DataGridTextColumn Header="Concepto" Binding="{Binding Concepto}" Width="*"/>
                            <DataGridTextColumn Header="Debe" Binding="{Binding Debe}" Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                            <DataGridTextColumn Header="Haber" Binding="{Binding Haber}" Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                            <DataGridTextColumn Header="Saldo pendiente" Binding="{Binding Saldo}" Width="100" ElementStyle="{StaticResource RightAlignStyle}"/>
                            <DataGridTextColumn Header="Factura" Binding="{Binding Factura}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </DockPanel>
        </Border>
    </Grid>
</UserControl>
