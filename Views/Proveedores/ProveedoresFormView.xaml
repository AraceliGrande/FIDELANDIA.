<UserControl x:Class="FIDELANDIA.Views.ProveedoresFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="600"
             Background="Transparent">
    
    <Border Background="White" Padding="32" Effect="{StaticResource DropShadow}">
        <StackPanel>
            <TextBlock Text="Nuevo Proveedor"
               FontSize="19"
               FontWeight="Bold"
               Foreground="#e5740a"
               Margin="0,0,0,10"/>

            <!-- Subtítulo -->
            <TextBlock Text="Ingrese los datos que se solicitan a continuación para dar de alta un nuevo proveedor."
               FontSize="11"
               FontWeight="SemiBold"
               Foreground="DarkOliveGreen"
               TextWrapping="Wrap"
               Margin="0,0,0,40"/>


            <!-- Nombre -->
            <StackPanel Style="{StaticResource FormFieldContainer}">
                <TextBlock Text="Nombre" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="TxtNombre" Style="{StaticResource UnderlineTextBox}"/>
            </StackPanel>

            <!-- CUIT -->
            <StackPanel Style="{StaticResource FormFieldContainer}">
                <TextBlock Text="CUIT" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="TxtCuit" Style="{StaticResource UnderlineTextBox}"/>
            </StackPanel>

            <!-- Teléfono -->
            <StackPanel Style="{StaticResource FormFieldContainer}">
                <TextBlock Text="Teléfono" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="TxtTelefono" Style="{StaticResource UnderlineTextBox}"/>
            </StackPanel>

            <!-- Dirección -->
            <StackPanel Style="{StaticResource FormFieldContainer}">
                <TextBlock Text="Dirección" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="TxtDireccion" Style="{StaticResource UnderlineTextBox}"/>
            </StackPanel>

            <!-- Email -->
            <StackPanel Style="{StaticResource FormFieldContainer}" Margin="0,0,0,30">
                <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="TxtEmail" Style="{StaticResource UnderlineTextBox}"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <Button Content="Cancelar" Style="{StaticResource SecondaryButton}" Width="120" Margin="0,0,12,0" Height="35" 
                         Click="Cancelar_Click"/>
                <Button Content="Guardar" Style="{StaticResource PrimaryButton}" Width="120" Height="35"
                        Click="Guardar_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>

</UserControl>

