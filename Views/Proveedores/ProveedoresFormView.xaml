<UserControl x:Class="FIDELANDIA.Views.ProveedoresFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="610"
             Background="Transparent">

    <Border Background="White"
            Margin="20"
            CornerRadius="10"
            BorderThickness="1"
            Effect="{StaticResource DropShadow}">
        <Grid Margin="30,25,30,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Contenido -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
            </Grid.RowDefinitions>

            <!-- Contenido -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="500">

                    <!-- Título -->
                    <TextBlock Text="Nuevo Proveedor"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#E5740A"
                               Margin="0,0,0,8"/>

                    <!-- Subtítulo -->
                    <TextBlock Text="Ingrese los datos que se solicitan a continuación para dar de alta un nuevo proveedor."
                               FontSize="12"
                               Foreground="#666"
                               TextWrapping="Wrap"
                               Margin="0,0,0,25"/>

                    <!-- Grid principal -->
                    <StackPanel Margin="0,30,0,15">

                        <!-- Nombre y Teléfono -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nombre -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Nombre" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtNombre" Style="{StaticResource UnderlineTextBox}"/>
                            </StackPanel>

                            <!-- Teléfono -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Teléfono" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtTelefono" Style="{StaticResource UnderlineTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- CUIT y Email -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- CUIT -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="CUIT" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtCuit" Style="{StaticResource UnderlineTextBox}"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Email" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                                <TextBox x:Name="TxtEmail" Style="{StaticResource UnderlineTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Dirección -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Dirección" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtDireccion" Style="{StaticResource UnderlineTextBox}"/>
                        </StackPanel>

                        <!-- Categoría -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Categoría" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbCategoria"
                                      Style="{StaticResource UnderlineComboBox}"
                                      DisplayMemberPath="Nombre"
                                      SelectedValuePath="CategoriaProveedorID"/>
                        </StackPanel>

                        <!-- Límite de crédito y Activo -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Limite de credito" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- TextBox principal -->
                                <TextBox x:Name="TxtLimiteCredito" Grid.Column="0" Style="{StaticResource UnderlineTextBox}" Padding="5,0"  Height="30"/>

                                <!-- Hint de formato -->
                                <TextBlock Text="Ej: 10.000,20"  Grid.Column="1" Foreground="Gray" FontSize="11" VerticalAlignment="Center"  Margin="10,0,0,0"/>
                            </Grid>

                        </StackPanel>
                       
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Botones -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar"
                        Height="30"
                        Width="150"
                        Margin="0,0,12,0"
                        Style="{StaticResource SecondaryButton}"
                        Click="Cancelar_Click"/>
                <Button Content="Guardar"
                        Height="30"
                        Width="150"
                        Style="{StaticResource PrimaryButton}"
                        Click="Guardar_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
