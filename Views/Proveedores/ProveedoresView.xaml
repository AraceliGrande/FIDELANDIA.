<UserControl x:Class="FIDELANDIA.Views.ProveedoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:FIDELANDIA.Views"
              Background="Transparent" Cursor="">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de Proveedores -->
        <views:ProveedoresListView Grid.Column="0"/>

        <!-- Detalle Cuenta Corriente -->
        <views:CuentaCorrienteView Grid.Column="1"/>
    </Grid>
</UserControl>
