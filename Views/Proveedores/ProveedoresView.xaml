<UserControl x:Class="FIDELANDIA.Views.ProveedoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:FIDELANDIA.Views"
             xmlns:subViews="clr-namespace:FIDELANDIA.Views.Proveedores"
             Background="Transparent" Cursor="">

    <Grid Margin="15,8,0,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de Proveedores -->
        <views:ProveedoresListView x:Name="ListaProveedores" Grid.Column="0" />

        <!-- Contenedor para los detalles del proveedor -->
        <Grid Grid.Column="1">
            <Button Content="Mostrar Resumen"
                x:Name="BtnMostrarResumen"
                Width="130" Height="30"
                Margin="20"
                HorizontalAlignment="Right"
                Style="{StaticResource SecondaryButton}"    
                VerticalAlignment="Bottom"
                Click="MostrarResumen_Click"/>

            <subViews:ProveedoresResumen x:Name="PaginaInicial" Visibility="Collapsed"/>
            <!-- Cuenta corriente (oculto al inicio) -->
            <views:CuentaCorrienteView x:Name="CuentaCorriente" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>
