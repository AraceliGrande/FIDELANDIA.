<UserControl x:Class="FIDELANDIA.Views.Proveedores.TransaccionesFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Width="610">

    <Border Background="White"
            Margin="20"
         CornerRadius="10"
         BorderThickness="1"
         Effect="{StaticResource DropShadow}">
        <Grid Margin="30,25,30,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Contenido -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="500">

                    <!-- Título -->
                    <TextBlock FontSize="20" FontWeight="Bold" Foreground="#E5740A" Margin="0,10,0,15">
                    <Run Text="Nueva Transacción - "/>
                    <Run x:Name="TxtProveedorNombre" Text="Proveedor 1"/>
                    </TextBlock>

                    <!-- Subtítulo -->
                    <TextBlock Text="Ingrese los datos asociados a esta nueva transferencia."
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,0,0,25"
                           TextWrapping="Wrap"/>



                    <!-- Contenedor único para Border -->
                    <StackPanel Margin="10">

                        <!-- Fecha y Tipo -->
                        <Grid Margin="0,5,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Fecha -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Fecha" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                                <DatePicker x:Name="DpFecha" Style="{StaticResource UnderlineDatePicker}" Height="30"/>
                            </StackPanel>

                            <!-- Tipo -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Tipo" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                                <ComboBox x:Name="CbTipo"
                                          ItemsSource="{Binding Tipos}"
                                          SelectedIndex="0"
                                          Background="#FFF" Margin="0,0,10,0" Height="30"
                                          />
                            </StackPanel>
                        </Grid>

                        <!-- Concepto -->
                        <StackPanel Margin="0,0,5,15">
                            <TextBlock Text="Concepto" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtConcepto" Style="{StaticResource UnderlineTextBox}" />
                        </StackPanel>

                        <!-- Monto -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Monto" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtDebe" Grid.Column="0" Style="{StaticResource UnderlineTextBox}" Padding="5,0" Height="30"/>
                                <TextBlock Text="Ej: 10.000,20" Grid.Column="1" Foreground="Gray" FontSize="12" VerticalAlignment="Center" Margin="15,0,5,0"/>
                            </Grid>
                        </StackPanel>

                        <!-- Comprobante -->
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Comprobante (opcional)" FontWeight="SemiBold" FontSize="12" Foreground="#333" Margin="0,0,0,5"/>
                            <Button x:Name="BtnAdjuntarComprobante"
                                    Height="130"
                                    Width="455"
                                    Background="#f0f0f0"
                                    BorderBrush="#555"
                                    BorderThickness="1"
                                    HorizontalAlignment="Left"
                                    Click="BtnAdjuntarComprobante_Click">
                                <!-- Contenedor único -->
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="/Resources/CargarImagen.png" Width="40" Height="40" Margin="0,0,0,10" Opacity="0.5"/>
                                        <TextBlock Text="Subir" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtRutaComprobante"
                                                   Text="Sin archivo seleccionado"
                                                   HorizontalAlignment="Center"
                                                   FontSize="11"
                                                   TextWrapping="Wrap"
                                                   Margin="0,10,0,5"
                                                   Foreground="Gray"/>
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </StackPanel>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- Botones -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar"
                    Height="30"
                    Width="150"
                    Margin="0,0,12,0"
                    Style="{StaticResource SecondaryButton}"
                    Click="Cancelar_Click"/>
                <Button Content="Guardar"
                    Height="30"
                    Width="150"
                    Style="{StaticResource PrimaryButton}"
                    Click="Guardar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
