<UserControl x:Class="FIDELANDIA.Views.recordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FIDELANDIA.Views"
             mc:Ignorable="d"
             xmlns:viewModels="clr-namespace:FIDELANDIA.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <viewModels:UsersViewModel x:Key="users"/>
    </UserControl.Resources>
    <Grid DataContext="{Binding Source={StaticResource users}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="Ingresa un nuevo usuario" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource TextPrimary}"/>
        <Border Grid.Column="0" Grid.Row="1"
                BorderBrush="Black"
                Width="360"
                Background="White"
                Padding="10"
                HorizontalAlignment="Center">
         <StackPanel Orientation="Vertical" Margin="10">
                <Label Content="Nombre:"/>
                <TextBox Text="{Binding UsuarioSeleccionado.Username, Mode=TwoWay}" Margin="00,5,10,20"/>
                <Label Content="Password:"/>
                <TextBox Text="{Binding UsuarioSeleccionado.Password, Mode=TwoWay}" Margin="00,5,10,20"/>
                <Label Content="Email:"/>
                <TextBox Text="{Binding UsuarioSeleccionado.Email, Mode=TwoWay}" Margin="00,5,10,20"/>
            </StackPanel>
          
         </Border>
        <StackPanel Orientation="Vertical"
              Grid.Row="2" Grid.Column="8"
              Width="360">
            <WrapPanel Margin="0 0 0 10">
                <Button Content="Agregar" 
                        Width="100" 
                        Margin="0,0,10,0"
                        Command="{Binding AddCommand}"/>
            </WrapPanel>
        </StackPanel>
        <ListView ItemsSource="{Binding Usuarios}" 
                  Margin="198,49,-198,49" 
                  Grid.Row="2"
                  Name="lstUsers">
            <ListView.View>
            <GridView>
                <GridViewColumn Header="Nombre">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Username}" 
                                   Foreground="{StaticResource TextPrimary}"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Header="Contraseña">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Password}" 
                   Foreground="{StaticResource TextPrimary}"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Header="Email">
    <GridViewColumn.CellTemplate>
        <DataTemplate>
            <TextBlock Text="{Binding Email}" 
                   Foreground="{StaticResource TextPrimary}"/>
        </DataTemplate>
    </GridViewColumn.CellTemplate>
</GridViewColumn>
            </GridView>
                </ListView.View>
        </ListView>
    </Grid>
</UserControl>
